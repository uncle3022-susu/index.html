<script>
/* --- JS æ ¸å¿ƒ --- */
let db = {
    workers: [], sites: [], extras: [], payments: {},
    ui: { date: '#1E293B', week: '#64748B' } // ç§»é™¤äº†èƒŒæ™¯è¨­å®šï¼Œæ”¹ç”¨ CSS è®Šæ•¸
};

let curMonth = new Date();
let gasUrl = "";

window.onload = async () => {
    // è¨­ç½®ç•¶å‰æœˆä»½
    curMonth.setDate(1);
    
    const urlParams = new URLSearchParams(window.location.search);
    const gasFromUrl = urlParams.get('gas');
    const gasFromLocal = localStorage.getItem('CONSTR_GAS_2026');
    
    gasUrl = gasFromUrl || gasFromLocal || "";

    if (gasUrl) {
        const inp = document.getElementById('gasUrlInp');
        const lock = document.getElementById('gasLock');
        if(inp) {
            inp.value = gasUrl;
            inp.disabled = true;
            inp.classList.add('locked-input');
        }
        if(lock) lock.checked = true;
        localStorage.setItem('CONSTR_GAS_2026', gasUrl);
        await fetchCloud();
    } else {
        // æœ¬åœ°è®€å–
        const localData = localStorage.getItem('CONSTR_DB_LOCAL');
        if(localData) db = JSON.parse(localData);
    }
    applyUI();
    renderAll();
};

function showToast(msg, type='info') {
    const box = document.getElementById('toast-box');
    const el = document.createElement('div');
    el.className = 'toast';
    const icon = type === 'success' ? 'âœ…' : 'â„¹ï¸';
    el.innerHTML = `<span>${icon}</span><span>${msg}</span>`;
    box.appendChild(el);
    setTimeout(() => { el.remove(); }, 3000);
}

// æ•¸æ“šä¿å­˜ä»£ç†
function saveData() {
    localStorage.setItem('CONSTR_DB_LOCAL', JSON.stringify(db));
    syncCloud();
}

async function fetchCloud() {
    if (!gasUrl) return;
    try {
        showToast("æ­£åœ¨åŒæ­¥é›²ç«¯...", "info");
        const res = await fetch(gasUrl);
        const data = await res.json();
        if (data && data.workers) { 
            db = data; 
            applyUI(); 
            renderAll();
            showToast("é›²ç«¯åŒæ­¥å®Œæˆ", "success");
        }
    } catch (e) { console.warn("é›²ç«¯è®€å–å¤±æ•—"); showToast("ç„¡æ³•é€£æ¥é›²ç«¯", "error"); }
}

async function syncCloud() {
    if (!gasUrl || !gasUrl.startsWith('http')) return;
    try {
        await fetch(gasUrl, { method: 'POST', mode: 'no-cors', body: JSON.stringify(db) });
    } catch (e) { console.error("é›²ç«¯åŒæ­¥å¤±æ•—"); }
}

function toggleGasLock() {
    const isLocked = document.getElementById('gasLock').checked;
    const inputEl = document.getElementById('gasUrlInp');
    const rawUrl = inputEl.value.trim();

    if (isLocked) {
        if (!rawUrl || !rawUrl.startsWith('http')) {
            showToast("è«‹è¼¸å…¥æœ‰æ•ˆç¶²å€", "error");
            document.getElementById('gasLock').checked = false;
            return;
        }
        gasUrl = rawUrl;
        localStorage.setItem('CONSTR_GAS_2026', gasUrl);
        const currentBaseUrl = window.location.href.split('?')[0];
        const persistentUrl = currentBaseUrl + "?gas=" + encodeURIComponent(gasUrl);

        if (confirm("ğŸ”’ ç¢ºå®šé–å®šï¼Ÿå°‡é‡æ•´é é¢ã€‚")) {
            window.location.href = persistentUrl;
        }
    } else {
        if (confirm("ğŸ”“ è§£é™¤é–å®šæœƒæ¸…é™¤è¨˜æ†¶çš„ç¶²å€ï¼Œç¢ºå®šå—ï¼Ÿ")) {
            localStorage.removeItem('CONSTR_GAS_2026');
            window.location.href = window.location.href.split('?')[0];
        } else {
            document.getElementById('gasLock').checked = true;
        }
    }
}

function renderAll() { renderCalendar(); renderWorkerList(); }

function switchPage(p, el) {
    document.querySelectorAll('.page').forEach(x => x.classList.remove('active'));
    document.querySelectorAll('.nav-item').
